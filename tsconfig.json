{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "lib": ["dom", "dom.iterable", "ES2022"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tests", "lib", "**/*spec.ts", "**/*test.ts"]
}
